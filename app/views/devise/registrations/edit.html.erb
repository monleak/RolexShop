<%= stylesheet_link_tag "/css/edituser.css" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="container">
<div class="row gutters">
<div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
<div class="card h-100">
	<div class="card-body">
		<div class="account-settings">
			<div class="user-profile">
				<div class="user-avatar">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar%>
          <% end %>
				</div>
				<h5 class="user-name"><%= current_user.name %></h5>
				<h6 class="user-email"><%= current_user.email %></h6>
			</div>
			<div class="about">
				<h5><%= current_user.role %></h5>
			</div>
		</div>
	</div>
</div>
</div>
<div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
<div class="card h-100">
	<div class="card-body">
		<div class="row gutters">
			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
				<h6 class="mb-2 text-primary">Personal Details</h6>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
				<div class="form-group">
					<label for="fullName">Name</label>
          <%= f.text_field :name , :class => "form-control", :placeholder => "Enter full name"%>
          <br>
          <label for="eMail">Upload your avatar</label>
              <%= f.file_field :avatar , :class => "form-control" %>
				</div>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
				<div class="form-group">
					<label for="eMail">Age</label>
          <%= f.number_field :age, :class => "form-control", :placeholder => "Enter your age" %>
				</div>
			</div>
		</div>
		<div class="row gutters">
			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
				<h6 class="mt-3 mb-2 text-primary">Password</h6>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
				<div class="form-group">
					<label for="phone">Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => "Enter your email" %>
          <label for="phone">Password (leave blank if you don't want to change it)</label>
          <%= f.password_field :password, autocomplete: "new-password" , :class => "form-control", :placeholder => "Enter your password" %>
          <label for="phone">Password confirmation</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , :class => "form-control", :placeholder => "Confirm your password"%>
        </div>
			</div>
		</div>
    <div class="row gutters">
			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
				<h6 class="mt-3 mb-2 text-primary">Confirm change</h6>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
				<div class="form-group">
          <label for="phone">Current password</label>
          <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control", :placeholder => "We need your current password to confirm your changes" %>
				</div>
			</div>
		</div>
		<div class="row gutters">
			<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
				<div class="text-right">
          <br>
          <div class="actions">
          <%= link_to "Cancel", :back ,:class => "btn btn-secondary"%>
          <%= f.submit "Update" , :class => "actions btn btn-primary"%>
          </div>
          
				</div>
			</div>
		</div>
	</div>
</div>
</div>
</div>
</div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

