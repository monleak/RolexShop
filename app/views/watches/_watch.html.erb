<div class="g-4 py-5 col-lg-6" id="<%= dom_id watch %>">
  <section class="p-4" style="background-color: #eee; border-radius: .5rem .5rem 0 0;">
    <div class="row justify-content-center">
      <div class="w-100 col-md-8 col-lg-6 col-xl-5">
        <div class="card text-black">
          <i class="fab fa-apple fa-lg pt-3 pb-1 px-3"></i>
          <% if watch %> 
            <% if watch.image.attached? %>
              <%= image_tag(watch.image, style: 'width:full;') %>
              <% else %>
              <%= image_tag('/rolex/donghonam.jpg', style: 'width:full;') %>
            <% end %>
          <% end %>

          <div class="card-body">
            <div class="text-center">
              <h5 class="card-title"><%= watch.title %></h5>
              <p class="text-muted mb-4"><%= watch.description %></p>
            </div>
            <div>
              <h4 class="card-title">Content: <%= watch.content %></h4>
            </div>
            <div class="d-flex justify-content-between total font-weight-bold mt-4">
              <span>Price</span>
              <span><%= watch.price %> Vnd</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <p class="text-center my-2">
      <%= link_to "Show this watch", watch %>
    </p>
  </section>
</div>