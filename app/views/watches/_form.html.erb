<%= form_with(model: watch) do |form| %>
  <% if watch.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(watch.errors.count, "error") %> prohibited this watch from being saved:</h2>

      <ul>
        <% watch.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <%= form.label :cover_image, "表紙画像", class: "text-lg font-semibold" %>
  <div class="inline-flex items-center gap-2">
    <% if @watch.image.attached? %>
      <%= image_tag(@watch.image, style: 'width:180px;height:120px;') %>
    <% end %>
    <%= form.file_field :image, class: "" %>
  </div>
  
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :gender, style: "display: block" %>
    <%= form.select :gender, options_for_select([["Men", "men"], ["Women", "women"]]) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
